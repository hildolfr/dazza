{
  "name": "core-database",
  "version": "1.0.0",
  "description": "Core database module providing database access to all other modules",
  "type": "core",
  "enabled": true,
  "provides": ["database", "db"],
  "emits": [
    "database:connected",
    "database:error",
    "database:query",
    "database:migration-complete"
  ],
  "config": {
    "path": "./data/cytube_stats.db",
    "mediaPath": "./data/media_encountered.db",
    "busyTimeout": 5000,
    "verbose": false,
    "migrations": {
      "autoRun": true,
      "directory": "./migrations"
    },
    "connectionPool": {
      "min": 1,
      "max": 10,
      "acquireTimeout": 30000
    }
  }
}